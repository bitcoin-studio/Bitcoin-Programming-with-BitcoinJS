<article class="doc">
  {{#if (eq page.layout '404')}}
    <h1 class="page">{{{or page.title 'Page Not Found'}}}</h1>
    <div class="paragraph">
      <p>The page you&#8217;re looking for does not exist. It may have been moved.</p>
    </div>
    <div class="paragraph">
      <p>If you arrived on this page by clicking on a link, please notify the owner of the site that the link is broken.
        If you typed the URL of this page manually, please double check that you entered the address correctly.</p>
    </div>
  {{else}}
    {{#if page.title}}
      <h1 class="page">{{{page.title}}}</h1>
    {{/if}}
    {{{page.contents}}}
  {{/if}}

  {{#if (or page.previous page.next)}}
    <div class="article-footer-nav">
      {{#if page.previous}}
        <a class="article-footer-nav-previous" href="
      {{~#if (eq page.previous.urlType 'internal')}}{{{relativize @root.page.url page.previous.url}}}
        {{~else}}{{{page.previous.url}}}{{~/if}}">&laquo; {{{page.previous.content}}}</a>
      {{/if}}
      {{#if (and page.next (not (eq page.next.url page.url)))}}
        <a class="article-footer-nav-next" href="
      {{~#if (eq page.next.urlType 'internal')}}{{{relativize @root.page.url page.next.url}}}
        {{~else}}{{{page.next.url}}}{{~/if}}">{{{page.next.content}}} &raquo;</a>
      {{/if}}
    </div>
  {{/if}}
</article>
<aside class="article-aside hidden" role="navigation">
  <h3 class="toc-title"><i class="fas fa-align-left fa-rotate-180"></i> Contents</h3>
  <div id="article-toc"></div>
</aside>
